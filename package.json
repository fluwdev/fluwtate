{
  "name": "fluwtate",
  "version": "1.1.0",
  "type": "module",
  "description": "state management solution for React and TypeScript, alternative zustand",
  "license": "MIT",
  "homepage": "https://github.com/fluwdev/fluwtate",
  "bugs": "https://github.com/fluwdev/fluwtate/issues",
  "author": "fluwdev",
  "repository": {
    "type": "git",
    "url": "https://github.com/fluwdev/fluwtate.git"
  },
  "keywords": [
    "react",
    "fluw",
    "fluwtate",
    "component"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "commit": "cz"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/react": "^16.0.1",
    "@types/node": "22.10.1",
    "@types/react": "^18.3.12",
    "@vitest/ui": "2.1.6",
    "eslint": "^9.16.0",
    "globals": "15.12.0",
    "happy-dom": "15.11.7",
    "react": "19.0.0-rc.0",
    "react-dom": "19.0.0-rc.0",
    "semantic-release": "^24.2.0",
    "standard": "^17.1.2",
    "typescript": "~5.6.2",
    "vite": "6.0.1",
    "vite-plugin-dts": "4.3.0",
    "vitest": "2.1.6"
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}